package ch06.sec08.exam03;

public class Car {
//   필드 
	int gas; //휘발유의 양
	
//	생성자 Car(){} 
//	!중요! 생성자는인스턴스가 실행될 때 한번만 실행
//	Car(int gas) {
//		System.out.println("생성자 실행!");
//		this.gas = gas;
//	}
//	
	
	
//	메소드 
//	!중요! 메소드는 여러번 실행
	void setGas(int gas) { //휘발유를 채워넣는다.
		this.gas += gas;
	}
	
	
	boolean isLeftGas() { //휘발유의 잔량을 보여줌
		
		return true;
	}
	void run () { //자동차가 달린다(휘발유 소모)
		
	}
}
