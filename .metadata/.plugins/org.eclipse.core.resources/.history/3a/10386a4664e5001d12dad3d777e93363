package Quiz;

public class Nav2 {

	public static void main(String[] args) {
		
		 Nav time = new Nav(250,38,28);
		 
		 int dDayPay = time.pay(250, 28);
		 int dayPaymonth = dDayPay*30;
		 int severancePay = time.pay2(dayPaymonth, 660);
		 
		 
		 
		 System.out.println("--------------");
		 System.out.println("퇴직금 계산기");
		 time.pay();
		 System.out.println("-------------");
		 System.out.println("1일 평균임금 : " + dDayPay + "만원");
		 System.out.println("한달 평균임금 : " + dayPaymonth+ "만원");
     	 System.out.println("총 퇴직금 : " + severancePay+ "만원");
		 
		 
	}
}
