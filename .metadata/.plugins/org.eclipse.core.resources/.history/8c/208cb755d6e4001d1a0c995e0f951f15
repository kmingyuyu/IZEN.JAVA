package Quiz;

public class Nav {
	
	int monthDay;
	int monthPay;
	int totalDay;
	
	Nav(int x, int y, int z){
		this.monthDay = x; 
		this.monthDay = y;
		this.monthDay = z;
	}

//	1일 평균임금 = { 사유발생한 날(퇴직일) 이전 3월간의 임금총액}① / {사유발생한 날(퇴직일) 이전 3월간의 총 일수}②
   int pay (int x , int y) {
//	   1일 평균임금*
 //    1일 평균임금 구하기 x:퇴직날전 한달간 임금총액 근무시간 y: 퇴직날전 한달간 총 일수
	   int result =  (monthDay*3)/(monthPay*3);
	   System.out.println(result);
	   return result;
   }
   
   int pay2 (int x , int y) {
	   
	   int result = (x * y)/365;
	   
	   return result;
   }
   
   void pay() {
	   System.out.println("퇴직금 산정공식은 '[(1일 평균임금 × 30일) × 총 계속근로기간] ÷ 365'입니다." );
   }
   
   
   
	   
   }
//퇴직금 산정공식은 '[(1일 평균임금 × 30일) × 총 계속근로기간] ÷ 365'입니다. 
//여기서 평균임금이란 산정해야하는 사유가 발생한 날 이전 3개월 동안에 
//해당 직원에게 지급된 임금의 총액을 그 기간의 총일수로 나눈 금액입니다.
   
 
	   
   
   

   
  
   
	
	

	
	

